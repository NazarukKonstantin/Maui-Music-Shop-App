<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="COURSE_ASH.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COURSE_ASH"
    xmlns:view="clr-namespace:COURSE_ASH.View"
    Style="{StaticResource BaseShellStyle}"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <Shell.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/ShellStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <Tab Title="Home" Icon="home_blank">
            <ShellContent
            Shell.NavBarIsVisible="False"
            ContentTemplate="{DataTemplate view:MainPage}"
            Route="MainPage"/>
        </Tab>
        <Tab Title="Search" Icon="catalog">
            <ShellContent
                Shell.NavBarIsVisible="False"
                ContentTemplate="{DataTemplate view:SearchPage}"
                Route="SearchPage"/>
        </Tab>
        <Tab Title="Cart" Icon="shopping_cart">
            <ShellContent
                Shell.NavBarIsVisible="False"
                ContentTemplate="{DataTemplate view:CartPage}"
                Route="CartPage"/>
        </Tab>
    </TabBar>
</Shell>