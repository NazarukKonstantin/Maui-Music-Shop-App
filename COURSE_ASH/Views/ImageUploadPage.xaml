<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COURSE_ASH.Views.ImageUploadPage"
             Title="ImageUploadPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="Image_Upload"
                HeightRequest="400"
                WidthRequest="400"
                HorizontalOptions="Center" />

            <Label
                Text="Upload Image"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                Text="Upload Image"
                Clicked="UploadImage_Clicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>