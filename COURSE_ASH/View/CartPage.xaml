<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:viewmodel="clr-namespace:COURSE_ASH.ViewModel"
             xmlns:model="clr-namespace:COURSE_ASH.Model"
             x:DataType="viewmodel:CartPageViewModel"
             x:Class="COURSE_ASH.View.CartPage">
    
    <Grid RowDefinitions="Auto,.7*,*,.9*">
        <BoxView Style="{StaticResource NavBarBoxView}"/>
        <Label Text="Shopping Cart" Style="{StaticResource PageTitle}"
                   />
        <Label Text="Looks like your cart is empty :("
               Grid.Row="1"
               Style="{StaticResource LargeLabel}"/>
        <Button Grid.Row="3" Style="{StaticResource LoginButtons}"
            Text="SHOP NOW"
            FontAttributes="Bold"
            />
        <skia:SKLottieView Grid.Row="2"
        Source="{AppThemeBinding Dark=empty_cart_dark.json,Light=empty_cart_light.json}"
        RepeatCount="-1"/>
    </Grid>
</ContentPage>
