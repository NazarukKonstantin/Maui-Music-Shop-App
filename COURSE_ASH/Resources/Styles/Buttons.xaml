<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:global="clr-namespace:COURSE_ASH.Globals">

    <Style x:Key="ButtonOutline" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LightBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="CornerRadius" Value="20"/>
    </Style>

    <Style x:Key="StandardButton" TargetType="Button">
        <Setter Property="Background" Value="{AppThemeBinding
                    Dark={StaticResource ComplimentaryLight},
                    Light={StaticResource PrimaryDark},
                    Default={StaticResource PrimaryDark}}"/>
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="TextColor" Value="{StaticResource TenderWhite}"/>
        <Setter Property="BorderColor" Value="{AppThemeBinding
                    Default={StaticResource PrimaryDark},
                    Light={StaticResource PrimaryDark},
                    Dark={StaticResource ComplimentaryLight}}"/>
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="CornerRadius" Value="20"/>

    </Style>

    <Style x:Key="LoginButtons" TargetType="Button" BasedOn="{StaticResource StandardButton}">
        <Setter Property="HeightRequest" Value="65"/>
        <Setter Property="FontSize" Value="Title"/>
        <Setter Property="WidthRequest" Value="250"/>
        <Setter Property="CornerRadius" Value="60"/>
    </Style>

    <Style x:Key="GoBackArrow"
           TargetType="ImageButton">
        <Setter Property="WidthRequest"
                Value="25" />
        <Setter Property="BackgroundColor"
                Value="Transparent" />
        <Setter Property="HeightRequest"
                Value="{Binding Source={RelativeSource Self},Path=WidthRequest}" />
        <Setter Property="Margin"
                Value="10" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Source"
                Value="{AppThemeBinding Dark={x:Static global:Icons.ArrowBackWhite},
                                        Light={x:Static global:Icons.ArrowBackBlack}}" />
        <Setter Property="HorizontalOptions"
                Value="Start" />
        <Setter Property="VerticalOptions"
                Value="Center" />
    </Style>
    
    <ControlTemplate x:Key="FrameRadioTemplate">
        <Border Style="{StaticResource CardViewBorder}">
            <Border.Shadow>
                <Shadow Brush="{AppThemeBinding Dark={StaticResource ComplimentaryLight}
                                    ,Light=Black}"
                        Offset="15,15"
                        Radius="15"
                        Opacity="0.2" />
            </Border.Shadow>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CheckedStates">
                    <VisualState x:Name="Checked">
                        <VisualState.Setters>
                            <Setter Property="IsVisible"
                                    Value="True" />
                        </VisualState.Setters>
                    </VisualState>

                    <VisualState x:Name="Unchecked">
                        <VisualState.Setters>
                            <Setter Property="IsVisible"
                                    Value="False" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <Frame Padding="0"
                   BorderColor="Transparent"
                   CornerRadius="15"
                   VerticalOptions="Center"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center">

                <HorizontalStackLayout Spacing="5">
                    <ContentPresenter>
                        <ContentPresenter.Resources>
                            <Style TargetType="Label">
                                <Setter Property="HorizontalOptions"
                                        Value="Center" />
                                <Setter Property="VerticalOptions"
                                        Value="Center" />

                                <Style.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding Path=IsChecked,
                                                           Source={x:RelativeSource AncestorType={x:Type RadioButton}}}"
                                                 Value="True">
                                        <Setter Property="TextColor"
                                                Value="{StaticResource TenderWhite}" />
                                        <Setter Property="FontAttributes"
                                                Value="Bold" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding Path=IsChecked,
                                                           Source={x:RelativeSource AncestorType={x:Type RadioButton}}}"
                                                 Value="False">
                                        <Setter Property="TextColor"
                                                Value="{StaticResource DarkText}" />
                                        <Setter Property="FontAttributes"
                                                Value="None" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="Image">
                                <Setter Property="HorizontalOptions"
                                        Value="Center" />
                                <Setter Property="VerticalOptions"
                                        Value="Center" />

                                <Style.Triggers>
                                    <DataTrigger TargetType="Image"
                                                 Binding="{Binding Path=IsChecked,
                                                           Source={x:RelativeSource AncestorType={x:Type RadioButton}}}"
                                                 Value="True">
                                        <Setter Property="Scale"
                                                Value="1" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Image"
                                                 Binding="{Binding Path=IsChecked,
                                                           Source={x:RelativeSource AncestorType={x:Type RadioButton}}}"
                                                 Value="False">
                                        <Setter Property="Scale"
                                                Value="0.8" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentPresenter.Resources>
                    </ContentPresenter>
                </HorizontalStackLayout>


                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CheckedStates">
                        <VisualState x:Name="Checked">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="{AppThemeBinding Dark={StaticResource ComplimentaryLight}
                                ,Light={StaticResource PrimaryDark}}" />
                            </VisualState.Setters>
                        </VisualState>

                        <VisualState x:Name="Unchecked">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="{AppThemeBinding Dark=White
                                ,Light=Grey}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Frame>
        </Border>
    </ControlTemplate>

    <Style TargetType="RadioButton">
        <Setter Property="ControlTemplate"
                Value="{StaticResource FrameRadioTemplate}" />
    </Style>
